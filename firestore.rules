rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to create their own agent document upon signup
    // and allow authenticated users to read agent data.
    // Admins and Superadmins can update any agent. Agents can only update their own info.
    match /agents/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth != null && (get(/databases/$(database)/documents/agents/$(request.auth.uid)).data.role in ['Admin', 'Superadmin'] || request.auth.uid == userId);
    }
    
    // Allow any authenticated user to perform actions on these collections.
    // More granular rules can be added here later if needed.
    match /clients/{docId} {
      allow read, write: if request.auth != null;
    }
    match /dailyAddedClients/{docId} {
      allow read, write: if request.auth != null;
    }
    match /deposits/{docId} {
      allow read, write: if request.auth != null;
    }
     match /withdrawals/{docId} {
      allow read, write: if request.auth != null;
    }
    match /inventory/{docId} {
      allow read, write: if request.auth != null;
    }
    match /orders/{docId} {
      allow read, write: if request.auth != null;
    }
    match /absences/{docId} {
      allow read, write: if request.auth != null;
    }
    match /penalties/{docId} {
      allow read, write: if request.auth != null;
    }
    match /rewards/{docId} {
      allow read, write: if request.auth != null;
    }
    match /teamPerformance/{docId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write the single document for videocall form data
    match /singleDocs/videoCallFormData {
       allow read, write: if request.auth != null;
    }
  }
}
