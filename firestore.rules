
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for Admin or Superadmin roles
    function isAdmin() {
      return get(/databases/$(database)/documents/agents/$(request.auth.uid)).data.role in ['Admin', 'Superadmin'];
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow anyone to check if agents exist (for signup) and create their own agent doc.
    // Only Admins can update/delete agents.
    match /agents/{agentId} {
      allow list: if true;
      allow read: if request.auth != null;
      allow create: if true;
      allow update, delete: if isAdmin();
    }

    // Allow authenticated users to manage their own data and admins to manage all data.
    match /{collection}/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}
