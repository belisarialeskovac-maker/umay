
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow a user to create their own agent document upon signup
    // The document ID must match the user's UID
    match /agents/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read and write to other collections
    // This is a basic rule set; you can refine this later for more granular control
    match /clients/{docId} {
      allow read, write: if request.auth != null;
    }
    match /dailyAddedClients/{docId} {
      allow read, write: if request.auth != null;
    }
    match /deposits/{docId} {
      allow read, write: if request.auth != null;
    }
    match /withdrawals/{docId} {
      allow read, write: if request.auth != null;
    }
    match /inventory/{docId} {
      allow read, write: if request.auth != null;
    }
    match /orders/{docId} {
      allow read, write: if request.auth != null;
    }
    match /absences/{docId} {
      allow read, write: if request.auth != null;
    }
    match /penalties/{docId} {
      allow read, write: if request.auth != null;
    }
    match /rewards/{docId} {
      allow read, write: if request.auth != null;
    }
    match /teamPerformance/{docId} {
      allow read, write: if request.auth != null;
    }
    match /singleDocs/{docId} {
        allow read, write: if request.auth != null;
    }
  }
}
