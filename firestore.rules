rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Agents can be read by any authenticated user.
    // A user can create their own agent document upon signup.
    // A user can only update their own document, or an Admin/Superadmin can update any.
    match /agents/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/agents/$(request.auth.uid)).data.role in ['Admin', 'Superadmin']);
    }

    // Allow authenticated users to read and write to all other collections.
    // This provides general access for the app's features to function.
    // You can tighten these rules later for more specific access control.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
