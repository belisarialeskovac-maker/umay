rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default to secure: deny all reads/writes unless explicitly allowed.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow any authenticated user to read and write to any collection.
    // This is a secure setup for an internal tool where all users are trusted.
    match /{path=**} {
      allow read, write: if request.auth != null;
    }
  }
}
